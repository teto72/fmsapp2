<section class="header-posts">
  <h1>投稿一覧</h1>
</section>


<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @posts.each do |post| %>
        <div class="column is-3">
          <div class="card">
            <div class="card-image">
              <%= link_to post_path(post) do %>
                <%= attachment_image_tag post, :image,:fill,300,350 %>
              <%end%>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-64x64">
                    <%= attachment_image_tag post.user, :profile_image,fallback:"no-image.png",class:"is-rounded" %>
                  </figure>
                </div>
                <div class="content">
                  <p class="title is-5">
                    <%= link_to user_path(post.user.id) do %>
                      <%= post.user.username %>
                    <% end %>
                  </p>
                </div>
              </div>
              <div class="content">
                <%= post.title %>
              </div>
              <%= post.created_at.strftime("%Y-%m-%d %H:%M") %> 投稿
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>