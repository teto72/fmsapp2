<section class="header-posts">
  <h1 class="title">投稿編集画面</h1>
<section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @post do |f|%>

          <%= f.label :title,class:"label" %>
          <%= f.text_field :title, class:"input"%>

          <%= f.label :text,class:"label" %>
          <%= f.text_field :text, class:"textarea"%>

          <%= f.label :image,class:"label" %>
          <%= f.attachment_field :image, class:"input" %>

          <%= f.submit "更新", class:"button is-link"%>
        <% end %>
      </div>
    </div>
  </div>
</section>
